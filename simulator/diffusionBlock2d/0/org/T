FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform TEMP_INITIAL;

boundaryField
{
    up
    {
        type            fixedGradient;
        gradient        uniform FLUX_UP;
    }

    down
    {
        type            fixedGradient;
        gradient        uniform FLUX_DOWN;
    }

    left
    {
        type            fixedValue;
        value           uniform TEMP_LEFT;
    }

    right
    {
        type            fixedValue;
        value           uniform TEMP_RIGHT;
    }

    frontAndBack
    {
        type            empty;
    }
}


